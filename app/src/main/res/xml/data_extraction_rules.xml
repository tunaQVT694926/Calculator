<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView hiển thị kết quả -->

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp"
        android:background="#D3D3D3"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textSize="48sp" />

    <GridLayout
        android:layout_width="252dp"
        android:layout_height="456dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5">

        <!-- Hàng đầu tiên với các nút CE, C, BS, / -->
        <Button
            android:id="@+id/btnCE"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="CE" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="C" />

        <Button
            android:id="@+id/btnBackspace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="BS" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="/" />

        <!-- Hàng tiếp theo với các nút 7, 8, 9, x -->
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#E9E9E9"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#E9E9E9"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#E9E9E9"
            android:text="9" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="x" />

        <!-- Hàng tiếp theo với các nút 4, 5, 6, - -->
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#E9E9E9"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#E9E9E9"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#E9E9E9"
            android:text="6" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="-" />

        <!-- Hàng tiếp theo với các nút 1, 2, 3, + -->
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#E9E9E9"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#E9E9E9"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:backgroundTint="#E9E9E9"
            android:text="3" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="+" />

        <!-- Hàng cuối cùng với các nút +/-, 0, = -->
        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="+/-" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="2"
            android:backgroundTint="#E9E9E9"
            android:text="0" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="." />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="=" />
    </GridLayout>
</LinearLayout>
